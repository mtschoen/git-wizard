<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>True</UseWindowsForms>
    <DisableImplicitNamespaceImports>true</DisableImplicitNamespaceImports>
    <Description>Maintain and manage all of your local git repositories. Filter by status and see issues like unpublished changes at a glance.</Description>
    <Copyright>Sticktoitive Software</Copyright>
    <Version>0.1.1</Version>

    <!-- Publish settings -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>false</SelfContained>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\GitWizard\GitWizard.csproj">
      <ReferenceSourceTarget></ReferenceSourceTarget>
    </ProjectReference>
  </ItemGroup>

  <Target Name="CleanOldReleases" BeforeTargets="ZipPublishOutput">
    <ItemGroup>
      <OldReleaseZips Include="..\Releases\GitWizardUI-*.zip" />
    </ItemGroup>
    <Delete Files="@(OldReleaseZips)" />
    <Message Importance="high" Text="Cleaned up old release zips" Condition="'@(OldReleaseZips)' != ''" />
  </Target>

  <Target Name="ZipPublishOutput" AfterTargets="Publish">
    <ZipDirectory SourceDirectory="$(PublishDir)" DestinationFile="..\Releases\GitWizardUI-$(Version).zip" Overwrite="true" />
    <Message Importance="high" Text="Created release zip: Releases\GitWizardUI-$(Version).zip" />
  </Target>

</Project>
