<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitWizardUI.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <HorizontalStackLayout>

                <Label
                    Text="Root Path"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="18"
                    VerticalOptions="Center" />

                <Entry
                    Text="%HOMEPATH%"
                    FontSize="18"
                    x:Name="RootPath"
                    HorizontalOptions="Center" />

                <Button
                    Text="Refresh"
                    FontAttributes="Bold"
                    SemanticProperties.Hint="Refresh the report"
                    Clicked="OnRefreshButtonClicked"
                    HorizontalOptions="Center" />

                <Label
                    x:Name="StatusLabel"
                    Text=""
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="18"
                    VerticalOptions="End" />

            </HorizontalStackLayout>
            <ListView 
                ItemsSource="{Binding ListRows}"
                x:Name="ListView" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
