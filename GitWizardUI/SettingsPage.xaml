<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GitWizardUI.ViewModels"
             x:DataType="viewModels:SettingsViewModel"
             x:Class="GitWizardUI.SettingsPage"
             Title="Settings"
             Shell.NavBarIsVisible="True">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Search Paths Section -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Search Paths" FontSize="18" FontAttributes="Bold" />
                <Label Text="Directories to search for Git repositories" FontSize="12" TextColor="Gray" />

                <CollectionView ItemsSource="{Binding SearchPaths}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Grid Padding="5" ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="{Binding .}" VerticalOptions="Center" />
                                <Button Grid.Column="1"
                                        Text="Remove"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveSearchPathCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="10,5" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                    <Entry Grid.Column="0"
                           Placeholder="Enter path (e.g., C:\Projects or %USERPROFILE%)"
                           Text="{Binding NewSearchPath}"
                           ReturnCommand="{Binding AddSearchPathCommand}" />
                    <Button Grid.Column="1"
                            Text="Browse"
                            Command="{Binding BrowseSearchPathCommand}"
                            Padding="15,5" />
                    <Button Grid.Column="2"
                            Text="Add"
                            Command="{Binding AddSearchPathCommand}"
                            Padding="15,5" />
                </Grid>
            </VerticalStackLayout>

            <!-- Ignored Paths Section -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Ignored Paths" FontSize="18" FontAttributes="Bold" />
                <Label Text="Directories to exclude from search" FontSize="12" TextColor="Gray" />

                <CollectionView ItemsSource="{Binding IgnoredPaths}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Grid Padding="5" ColumnDefinitions="*,Auto">
                                <Label Grid.Column="0" Text="{Binding .}" VerticalOptions="Center" />
                                <Button Grid.Column="1"
                                        Text="Remove"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIgnoredPathCommand}"
                                        CommandParameter="{Binding .}"
                                        FontSize="12"
                                        Padding="10,5" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="10">
                    <Entry Grid.Column="0"
                           Placeholder="Enter path (e.g., C:\Windows or %APPDATA%)"
                           Text="{Binding NewIgnoredPath}"
                           ReturnCommand="{Binding AddIgnoredPathCommand}" />
                    <Button Grid.Column="1"
                            Text="Browse"
                            Command="{Binding BrowseIgnoredPathCommand}"
                            Padding="15,5" />
                    <Button Grid.Column="2"
                            Text="Add"
                            Command="{Binding AddIgnoredPathCommand}"
                            Padding="15,5" />
                </Grid>
            </VerticalStackLayout>

            <!-- Info Section -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Tips:" FontSize="14" FontAttributes="Bold" />
                <Label Text="• Use environment variables like %USERPROFILE% or %APPDATA%" FontSize="12" />
                <Label Text="• Changes are saved automatically" FontSize="12" />
                <Label Text="• Refresh the main view to see changes" FontSize="12" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
